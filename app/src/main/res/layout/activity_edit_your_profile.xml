<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.TeacherOrTutor.EditYourProfileActivity">

    <ImageView
        android:id="@+id/ivBack"
        style="@style/backIcon"
    />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_100sdp"
        android:padding="30dp"
        android:layout_below="@+id/ivBack"
        android:layout_marginTop="35dp"
        android:src="@drawable/splashimg" />

    <TextView
        android:id="@+id/tvEditYourProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:fontFamily="@font/avenirlstd_roman"
        android:gravity="center"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:text="Edit Your Profile"
        android:textAllCaps="true"
        android:textColor="@color/textcolor"
        android:textSize="22dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/llAboutYou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvEditYourProfile"
        android:layout_marginTop="30dp"
        android:background="@drawable/rectangle"
        android:elevation="3dp"
        android:layout_margin="10dp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        app:contentPaddingBottom="45dp"
        app:cardBackgroundColor="@color/white"
        app:contentPaddingTop="45dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/aenirlsttd_black"
                android:text="About You"
                android:textAllCaps="true"
                android:textColor="@color/textcolor"
                android:textSize="18sp" />
        </LinearLayout>



        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/_10sdp"
            android:src="@drawable/arrow" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/llTeachingInfoRates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llAboutYou"
        android:elevation="3dp"
        android:background="@drawable/rectangle"
        android:layout_margin="10dp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardBackgroundColor="@color/white"
        app:contentPaddingBottom="45dp"
        app:contentPaddingTop="45dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/aenirlsttd_black"
                android:text="@string/teaching_info_rates"
                android:textAllCaps="true"
                android:textColor="@color/textcolor"
                android:textSize="18sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/_10sdp"
            android:src="@drawable/arrow" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/llAvailability"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_below="@+id/llTeachingInfoRates"
        android:elevation="3dp"
        android:layout_margin="10dp"
        android:background="@drawable/rectangle"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardBackgroundColor="@color/white"
        app:contentPaddingBottom="45dp"
        app:contentPaddingTop="45dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/aenirlsttd_black"
                android:text="Availability"
                android:textAllCaps="true"
                android:textColor="@color/textcolor"
                android:textSize="18sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/_10sdp"
            android:src="@drawable/arrow" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>