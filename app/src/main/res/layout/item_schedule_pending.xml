<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/barshadow"
    android:padding="@dimen/_6sdp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/schedulePendingRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:padding="8dp"
            android:src="@drawable/mig" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ivImage"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvItemName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aenirlsttd_black"
                    android:text="James"
                    android:textColor="@color/textcolor"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvItemType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/avenirlstd_roman"
                    android:text="Tutor"
                    android:textAllCaps="true"
                    android:textColor="@color/editprofilebutton"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tvItemDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/avenirlstd_roman"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:text="WED SEPT 21"
                    android:textAllCaps="true"
                    android:textColor="@color/editprofilebutton"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/tv_start_endtime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/avenirlstd_roman"
                    android:gravity="end"
                    android:text="2:00PM - 4:00PM"
                    android:textColor="@color/editprofilebutton"
                    android:textSize="11dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnComplete"
        android:layout_width="90dp"
        android:layout_height="34dp"
        android:layout_below="@+id/schedulePendingRoot"
        android:layout_alignEnd="@+id/schedulePendingRoot"
        android:layout_gravity="end"
        android:layout_marginEnd="15dp"
        android:background="@drawable/background_blue"
        android:padding="5dp"
        android:text="Complete"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:visibility="gone" />
</RelativeLayout>