<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_marginHorizontal="@dimen/_30sdp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_roundedges"
        >

        <TextView
            android:id="@+id/tvPromoCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenirlsttd_book"
            android:gravity="center"
            android:layout_margin="@dimen/_20sdp"
            android:text="Payment \nSucessfull!"
            android:textAllCaps="true"
            android:textColor="@color/textcolor"
            android:textSize="25sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tvPromoCode"
            android:background="@color/text">

        </View>
        <TextView
            android:id="@+id/edPromoCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPromoCode"
            android:layout_marginTop="10dp"
            android:textSize="13sp"
            android:gravity="center"
            android:textColor="@color/gray969A9D"
            android:text="Your reoccurring payments will be charged to this card. A receipt and confirmation email will be send to this email you provided signing up.\n\n\nOnce your background check has been completed, you will get your verfication badge!"
            android:fontFamily="@font/avenirlsttd_book"
            android:padding="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPaymentContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edPromoCode"
            android:layout_margin="40dp"
            android:background="@drawable/button_bg_and_shape"
            android:fontFamily="@font/avenirlstd_roman"
            android:text="Continue"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </RelativeLayout>

</RelativeLayout>